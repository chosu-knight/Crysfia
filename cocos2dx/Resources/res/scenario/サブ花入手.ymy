//ラシャス島1日目花入手
//内容は使い回しです

@sys:name(名前クロエ)
@sys:name(名前お婆さん)
@sys:background(hクリスフィア専門店)
@sys:bgm(bサブ2)
@sys:live2d(crysfia)
@crysfia:touchoff
