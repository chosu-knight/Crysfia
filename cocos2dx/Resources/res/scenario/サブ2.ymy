//配置場所
//1日目、２日目、３日目

@sys:name(名前アレン)
@sys:name(名前クロエ)
@sys:name(名前男性)
@sys:name(名前クリスフィア)
@sys:background(h娯楽の島)
@sys:bgm(bシリアス)
@sys:live2d(crysfia)
@crysfia:touchoff
//@crysfia:in
