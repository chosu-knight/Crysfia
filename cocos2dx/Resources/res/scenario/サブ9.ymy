//配置場所
//９日目、１０日目

@sys:name(名前アレン)
@sys:name(名前クロエ)
@sys:name(名前おじさん)
@sys:background(hヒャルキシ島)
@sys:bgm(bシリアス)
@sys:live2d(crysfia)
@crysfia:touchoff
